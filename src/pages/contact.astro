---
import BaseLayout from '../layouts/BaseLayout.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
---

<BaseLayout title="Contact | Rachel Weiss" description="Get in touch with Rachel Weiss - Designer, Strategist, and Artist">
	<div class="stack gap-20">
		<main class="wrapper contact">
			<Hero
				title="Get in Touch"
				tagline="Let's create something amazing together"
			/>

			<section class="contact-info">
				<div class="contact-card">
					<div class="contact-item">
						<Icon icon="envelope" size="2em" />
						<div class="contact-details">
							<h3>Email</h3>
							<a href="mailto:evergreensunshine@icloud.com">evergreensunshine@icloud.com</a>
						</div>
					</div>

					<div class="contact-item">
						<Icon icon="phone" size="2em" />
						<div class="contact-details">
							<h3>Phone</h3>
							<a href="tel:+1234567890">(123) 456-7890</a>
						</div>
					</div>

					<div class="contact-item">
						<Icon icon="linkedin-logo" size="2em" />
						<div class="contact-details">
							<h3>LinkedIn</h3>
							<a href="http://www.linkedin.com/in/rachel-weiss-701500346" target="_blank" rel="noopener noreferrer">rachel-weiss-701500346</a>
						</div>
					</div>

					<div class="contact-item">
						<Icon icon="instagram-logo" size="2em" />
						<div class="contact-details">
							<h3>Instagram</h3>
							<a href="https://www.instagram.com/livehappyrach/" target="_blank" rel="noopener noreferrer">@livehappyrach</a>
						</div>
					</div>
				</div>
			</section>
		</main>
	</div>
</BaseLayout>

<style>
	.contact {
		display: flex;
		flex-direction: column;
		gap: 3.5rem;
	}

	.contact-info {
		max-width: 600px;
		margin: 0 auto;
	}

	.contact-card {
		display: flex;
		flex-direction: column;
		gap: 2rem;
		padding: 3rem;
		background: var(--gradient-subtle);
		border: 1px solid var(--gray-800);
		border-radius: 1.5rem;
		transition: all 0.3s ease;
	}

	.contact-card:hover {
		transform: translateY(-2px);
		box-shadow: var(--shadow-md);
		border-color: var(--gray-700);
	}

	.contact-item {
		display: flex;
		align-items: flex-start;
		gap: 1.5rem;
	}

	.contact-details {
		display: flex;
		flex-direction: column;
		gap: 0.5rem;
	}

	.contact-details h3 {
		color: var(--gray-0);
		margin: 0;
	}

	.contact-details a {
		color: var(--gray-300);
		text-decoration: none;
		transition: color var(--theme-transition);
	}

	.contact-details a:hover {
		color: var(--gray-0);
	}

	@media (min-width: 50em) {
		.contact-card {
			padding: 4rem;
		}
	}
</style> 